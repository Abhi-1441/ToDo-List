<%- include("header") -%>

  <div class="box" id="heading">
    <h1>
      <%= listTitle %>
    </h1>
  </div>

  <div class="box">
    <% newListItems.forEach(function(element){ %>
      <form action= "/delete" method="post" >
        <div class="item" >
          <input type="checkbox" name="checkbox" value=<%=element._id %> <% if(element.item !="Wake Up Early ðŸ¥±"){ %>onChange="this.form.submit()"<% } %>>
          <p>
            <%= element.item %>
          </p>
          <input type="hidden" name = "listType" value=<%= listTitle %> >
        </div>
      </form>
      <% }); %>
        <form class="item" action="/" method="post">
          <input type="text" name="newItem" placeholder="New Item" autocomplete="off" required oninvalid="this.setCustomValidity('Enter an item ') ">
          <button type="submit" name="list" value=<%=listTitle%>>+</button>
        </form>
  </div>

  <%- include("footer") -%>